{
    "name": "Ubuntu VPS Codespaces (Pro)",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/desktop-lite:1": {
            "password": "12345678",
            "webPort": "6080",
            "vncPort": "5901"
        }
    },

    // Chạy kịch bản startup.sh một lần duy nhất sau khi container được tạo
    "postCreateCommand": ".devcontainer/startup.sh",
    
    "forwardPorts": [
        5901,
        6080,
        3389
    ],
    "portsAttributes": {
        "5901": {
            "label": "VNC"
        },
        "6080": {
            "label": "noVNC (Browser)"
        },
        "3389": {
            "label": "RDP"
        }
    },
    "remoteUser": "vscode"
}
